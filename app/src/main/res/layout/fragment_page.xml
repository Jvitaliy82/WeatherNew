<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PageFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        android:elevation="16dp"
        android:backgroundTint="@color/colorBackgroundCard"
        android:backgroundTintMode="src_in">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pageWeekDay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:layout_margin="4dp"
                android:gravity="center"
                android:textSize="22sp"
                tools:text="2020-03-23 09:00:00"
                tools:textColor="#000000"/>

            <TextView
                android:id="@+id/descPage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="22sp"
                android:textStyle="bold|italic"
                tools:text="небольшая облачность"
                tools:textColor="#000000"/>

            <TextView
                android:id="@+id/tempPage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:layout_margin="4dp"
                android:gravity="center"
                android:textSize="62sp"
                tools:text="+6 °C"
                tools:textColor="#000000"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>